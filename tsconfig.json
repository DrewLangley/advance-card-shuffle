{
	"include": ["src/**/*", "scripts"],
	"compilerOptions": {
    "target":"ES6",
		"rootDir": "./src",
		"baseUrl": "./src",
		"allowSyntheticDefaultImports": true,
		"lib": ["dom", "es2015", "es2016", "es2017", "esnext.asynciterable"],
		"module": "CommonJS",
		"moduleResolution": "node",
    "outDir": "./dist",
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"esModuleInterop": true
	}
}
