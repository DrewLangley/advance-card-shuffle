{
	"include": ["src/**/*", "scripts"],
	"compilerOptions": {
		"baseUrl": "./src",
		"allowSyntheticDefaultImports": true,
		"lib": ["dom", "es2015", "es2016", "es2017", "esnext.asynciterable"],
		"module": "es2015",
		"moduleResolution": "node",
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"esModuleInterop": true
	}
}
